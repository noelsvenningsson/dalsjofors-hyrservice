# App runtime port
PORT=8000
SWISH_MODE=mock

# Swish Commerce configuration (token-baserad integration)
SWISH_COMMERCE_MERCHANT_ALIAS=
SWISH_COMMERCE_CERT_PATH=
SWISH_COMMERCE_KEY_PATH=
# Optional explicit callback URL. If empty, app derives it from request host.
SWISH_COMMERCE_CALLBACK_URL=

# Optional booking notification webhook URL
NOTIFY_WEBHOOK_URL=

# Optional dedicated issue-report webhook URL (prioritized over NOTIFY_WEBHOOK_URL)
REPORT_WEBHOOK_URL=

# Issue report email receiver used by webhook payload
REPORT_TO=svenningsson@outlook.com

# Secret sent in receipt webhook JSON payload as "secret"
# Rotate immediately if leaked.
NOTIFY_WEBHOOK_SECRET=

# Optional Twilio SMS integration
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=
# Admin SMS target (Swedish mobile, normalized internally)
ADMIN_SMS_NUMBER=0709663485

# Admin auth token for /api/dev/* and /api/admin/* routes.
# Required for admin/dev API access.
ADMIN_TOKEN=

# Admin password for browser login at /admin/login.
# Required in production.
ADMIN_PASSWORD=

# HMAC secret used to sign admin session cookies.
# Required if you want browser login at /admin/login.
ADMIN_SESSION_SECRET=
